
@model IEnumerable<EHA_News.Models.Article>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home Page</title>
    <link rel="stylesheet" href="~/css/site.css" />

</head>

    <a class="btn btn-secondary" asp-controller="Article" asp-action="View_Article">Generic Article</a>

<h1>Articles</h1>

<a href="@Url.Action("Create")" class="btn btn-primary">Write New Article</a>

    
<hr />

<!-- List of articles -->
<h2>Article List</h2>
<div class="article-list">
    @foreach (Article article in Model)
    {
        <div class="article">
            <h2>@article.Headline</h2>
            <p><strong>Author:</strong> @article.Author</p>
            <p><strong>Category:</strong> @article.Category</p>
            <p>@article.Content</p>
            <p><strong>Published:</strong> @article.DatePublished.ToShortDateString()</p>
        </div>
    }
</div>

