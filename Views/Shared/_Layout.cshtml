<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - EHA-News</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha-long-hash_code" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/Views/Shared/_Layout.cshtml.css" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/css/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar-static-top navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/EHA_News_Logo.png" width="100"></a>
                <div class="navbar-collapse d-sm-inline-flex navbar-nav flex-grow-1 mr-auto">
                    <a class="nav-item nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                  
                    <a class="nav-item nav-link text-light" asp-controller="Article" asp-action="Category" asp-route-categoryID="C">Computing</a>
                    <a class="nav-item nav-link text-light" asp-controller="Article" asp-action="Category" asp-route-categoryID="E">Entertainment</a>
                    <a class="nav-item nav-link text-light" asp-controller="Article" asp-action="Category" asp-route-categoryID="F">Finance</a>
                    <a class="nav-item nav-link text-light" asp-controller="Article" asp-action="Category" asp-route-categoryID="P">Politics</a>

                </div>
                @{
                    var userName = TempData.Peek("UserName") as string;
                }
                @if ( userName == null || userName == "")
                {
                    <div class="navbar-nav ">
                        <a class="nav-item nav-link text-light" asp-controller="Account" asp-action="Signup">Sign Up</a>
                        <a class="nav-item nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
                    </div>
                }
                else {
                <div class="navbar-nav ">
                        <a class=" nav-item nav-link text-light">User: @userName</a>
                        <a class="nav-item nav-link text-light" asp-controller="Account" asp-action="LogOut">Log Out</a>
                </div>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="fixed-bottom footer bg-dark text-light">
        <div class="container">
            &copy; EHA News LLC. - November 24, 2024 <br>
            All Rights Reserved
        </div>
    </footer>
</body>
</html>